<% unless @contacts.empty? %>
  <h2>Addresses</h2>
  <br>
  <table id="bosaTable" class="display" border="0" cellspacing="1" cellpadding="0">
    <thead>
      <tr>        
        <th>Contact Name</th>
        <th>Relationship</th>
        <th>Street</th>
        <th>City</th>
        <th>District</th>
        <th>State</th>
        <th>Country</th>
        <th>Mobile#</th>
        <th>Telephone#</th>
        <th></th>
        <th></th>        
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
       <tr>      	 
         <td><%= link_to contact.contact_person, customer_contact_path(contact) %></td>
         <td><%= contact.relationship %></td>
         <td><%= contact.street %></td>
         <td><%= contact.city %></td>
         <td><%= contact.district %></td>
         <td><%= contact.state %></td>
         <td><%= contact.country %></td>
         <td><%= contact.mobile %></td>
         <td><%= contact.telephone %></td>
         <td><%= link_to "Edit", edit_customer_contact_path(contact) %> <%= link_to "Destroy", customer_contact_path(contact), :method  => :delete, :confirm  => 'Are you sure to delete the address record?' %></td>
         <td><%= link_to "Make Order", new_order_path(:id => contact.id) %> </td>  
         </tr>
     <% end %>
   </tbody>
  </table>
<% end -%>